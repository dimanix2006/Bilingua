@model Project.Models.Language

@{
    ViewBag.Title = "Deleting a language";
}

<p>@Html.ActionLink("Cancel", "Details", new { id = Model.ID })</p>
<h2 style="color:red">Are you sure you want to delete this language?</h2>

@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}

<p style="font-weight:bold">@Model.Name</p>
<p>Code: @Model.Code</p>